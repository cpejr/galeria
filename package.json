{
    "name": "MegaPool",
    "version": "0.3.20",
    "private": true,
    "scripts": {
        "start": "node ./bin/www",
        "test": "nodemon ./bin/www"
    },
    "dependencies": {
        "blob-stream": "^0.1.3",
        "body-parser": "^1.18.2",
        "cookie-parser": "~1.4.3",
        "debug": "~2.6.9",
        "dotenv": "^5.0.1",
        "express": "~4.16.0",
        "express-flash": "0.0.2",
        "express-handlebars": "^3.0.0",
        "express-session": "^1.15.6",
        "firebase": "^4.12.1",
        "formidable": "^1.2.1",
        "handlebars": "^4.0.11",
        "hbs": "~4.0.1",
        "http-errors": "~1.6.2",
        "jspdf": "^1.4.0",
        "method-override": "^2.3.10",
        "mongoose": "^5.1.6",
        "morgan": "^1.9.1",
        "node-mandrill": "^1.0.1",
        "node-sass-middleware": "0.11.0",
        "node-schedule": "^1.3.0",
        "nodemailer": "^6.4.16",
        "pdfkit": "^0.8.3",
        "phantom": "^4.0.12",
        "request": "^2.88.0",
        "request-promise": "^4.2.2"
    },
    "devDependencies": {
        "eslint": "^4.19.1",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.11.0"
    },
    "engines": {
        "node": "8.11.1"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "newline-per-chained-call": [
                "off"
            ],
            "max-len": [
                "error",
                {
                    "code": 180
                }
            ],
            "no-console": [
                "off"
            ],
            "prefer-arrow-callback": [
                "warn"
            ],
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ],
            "linebreak-style": [
                "off"
            ]
        }
    }
}
