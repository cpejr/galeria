{{#section 'stylesheets'}}
{{/section}}

<div class="pb-3 text-center gradient-background text-white">
  <h3 class="font-black">Newsletter</h3>
</div>

{{#if newsletters}}
<div style="overflow-x:auto;">
  <div class="container">
    <p>Digite logo abaixo para buscar algum e-mail específico:</p>
    <input class="form-control" id="myInput" type="text" placeholder="Pesquisar">
    <br>

    <table class="table table-bordered table-striped table-responsive-sm">
      <thead>
        <tr>
          <th class="text-center">Nome</th>
          <th class="text-center">Email</th>
          <th class="text-center">Opções</th>
        </tr>
      </thead>
      <tbody id="myTable">
        {{#each newsletters}}
        <tr class="text-center">
          <td class="font-book text-center">{{fullName}}</td>
          <td class="font-book text-center">{{email}}</td>
          <th scope="row">
            <form action="/newsletter/{{id}}?_method=DELETE" method="POST">
              <div class="row">
                <button type="submit" class="btn btn-outline-danger mx-auto">
                  Remover
                </button>
              </div>
            </form>
          </th>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

{{else}}
<div class="container">
  <p class="text-center font-light">Não há nenhum email na newsletter.</p>
</div>
{{/if}}

{{#section 'scripts'}}
<script src="/javascripts/navbar.js"></script>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
{{/section}}
